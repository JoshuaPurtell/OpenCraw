{
  "name": "web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run ./scripts/dev.ts",
    "css:build": "tailwindcss -i ./src/index.css -o ./src/styles.css --minify",
    "css:watch": "tailwindcss -i ./src/index.css -o ./src/styles.css --watch",
    "build": "bun run typecheck && bun run css:build && bun build --target=browser --minify --splitting --outdir dist ./index.html",
    "typecheck": "tsc --noEmit -p tsconfig.app.json",
    "lint": "eslint .",
    "preview": "bun --port 4173 ./dist/index.html"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/cli": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "playwright": "^1.58.2",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}
